package Test3;
//Accept 10 number in an array. 
//Display all even number at the beginning and
//all Odd at the end. Use only one loop
import java.util.Scanner;

public class ques1 {
	public static void main(String[] args) {
		int arr[]= new int[10];
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter 10 numbers:");
		for(int i=0;i<arr.length;i++)
		{
			arr[i]=sc.nextInt();
		}
		sc.close();
		System.out.println();
		for(int i=0;i<arr.length;i++)
		{
			System.out.print(arr[i]+" ");
		}
		
		int lefteven = 0;
		int rightodd= arr.length-1;
		int res[]=new int[10];
		for(int i=0;i<arr.length;i++)
		{
			if(arr[i]%2==0)
			{
				res[lefteven++]=arr[i];
			}
			else
			{
				
				res[rightodd--]=arr[i];
			}
		}
		
		System.out.println();
		for(int i=0;i<arr.length;i++)
		{
			System.out.print(res[i]+" ");
		}
		
	}

}
package Test3;

import java.util.Arrays;
import java.util.Scanner;

//Accept 5 number in an array and sort it. 
//Accept a number from user and 
//check if it is there in an array or not
//use binary search.
public class ques2 {
	static int bs(int arr[], int start, int end, int k) {
		if(start<=end)
		{
			int mid=(start+end)/2;
			if(arr[mid]==k)
			{
				return mid;
			}
			else
			{
				if(k<arr[mid])
				{
					return bs(arr,start,mid-1,k);
				}
				else
					return bs(arr,mid+1,end,k);
			}
		}
		else
		{
			return(-1);
		}
	}
	public static void main(String[] args) {
		int arr[]= {5,3,2,1,4};
		Arrays.sort(arr);
		System.out.println();
		for(int i=0;i<arr.length;i++)
		{
			System.out.print(arr[i]+" ");
		}
		Scanner sc = new Scanner(System.in);
		int k= sc.nextInt();
		sc.close();
		System.out.println( "its at the index(if not then -1) : "+bs(arr,0,arr.length-1,k));
	}

}
